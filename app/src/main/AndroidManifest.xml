<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    android:versionCode="1"
    android:versionName="1.0"
    package="com.boss.chessalarm2">

    <uses-permission android:name="android.permission.USE_FULL_SCREEN_INTENT" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_king_logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_king_logo_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ChessAlarm2">
        <activity android:name="com.boss.chessalarm2.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:screenOrientation="portrait"
            android:name="com.boss.chessalarm2.chessproblemalarm.ChessAlarmActivity" />

        <activity
            android:exported="true"
            android:screenOrientation="portrait"
            android:name="com.boss.chessalarm2.chessproblemalarm.SnoozeActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>


        <activity
            android:theme="@style/Theme.ChessAlarm2.CustomTheme"
            android:name="com.boss.chessalarm2.configure.SelectDaysActivity">

        </activity>

        <receiver
            android:name="com.boss.chessalarm2.chessproblemalarm.AlarmReceiver"
            android:enabled="true"
            android:exported="true" >
            <intent-filter>
                <action android:name="com.example.alarmmanager"/>
                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
        </receiver>

        <receiver
            android:name="com.boss.chessalarm2.chessproblemalarm.BootCompletedReceiver"
            android:enabled="true"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED"/>
            </intent-filter>
        </receiver>

    </application>

</manifest>